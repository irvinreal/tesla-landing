---
import ChargeSection from '../components/ChargeSection.astro'
import HeroSection from '../components/HeroSection.astro'
import LandingHeader from '../components/LandingHeader.astro'
import Model3Section from '../components/Model3Section.astro'
import ModelSSection from '../components/ModelSSection.astro'
import ModelXSection from '../components/ModelXSection.astro'
import ModelYSection from '../components/ModelYSection.astro'
import PowerwallSection from '../components/PowerwallSection.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title='Autos eléctricos, energía solar y limpia'>
  <LandingHeader />
  <main
    class='snap-y snap-mandatory relative w-full h-screen overflow-x-hidden overflow-y-auto scroll-smooth'
  >
    <div class='snap-center'>
      <HeroSection />
    </div>
    <div class='snap-center'>
      <ModelYSection />
    </div>
    <div class='snap-center'>
      <Model3Section />
    </div>
    <div class='snap-center'>
      <ModelSSection />
    </div>
    <div class='snap-center'>
      <ModelXSection />
    </div>
    <div class='snap-center'>
      <PowerwallSection />
    </div>
    <div class='snap-center'>
      <ChargeSection />
    </div>
  </main>
</Layout>
